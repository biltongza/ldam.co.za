{
  "name": "frontend",
  "version": "0.0.1",
  "scripts": {
    "dev": "node ./generate-last-modified-metadata.js && vite dev",
    "build": "rimraf api/src && node ./generate-last-modified-metadata.js && vite build && copyfiles src/posts/*.md build/server",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "swa": "swa start"
  },
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@azure/static-web-apps-cli": "^2.0.1",
    "@microsoft/applicationinsights-web": "^3.3.4",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "copyfiles": "^2.4.1",
    "dayjs": "^1.11.13",
    "eslint": "9.14",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "glob": "^10.4.5",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "rehype-external-links": "^3.0.0",
    "rehype-highlight": "^7.0.1",
    "rehype-stringify": "^10.0.1",
    "rehype-unwrap-images": "^1.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "rimraf": "^5.0.10",
    "sass": "^1.81.0",
    "svelte": "^5.2.4",
    "svelte-adapter-azure-swa": "^0.20.1",
    "svelte-check": "^4.0.9",
    "svelte-eslint-parser": "^0.43.0",
    "svelte-preprocess": "^6.0.0",
    "to-vfile": "^8.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "unified": "^11.0.5",
    "vite": "^5.4.11"
  },
  "type": "module",
  "engines": {
    "node": "20.x"
  }
}
