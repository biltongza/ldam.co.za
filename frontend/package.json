{
	"name": "frontend",
	"version": "0.0.1",
	"scripts": {
		"dev": "node ./generate-last-modified-metadata.js && vite dev",
		"build": "rimraf api/src && node ./generate-last-modified-metadata.js && vite build && copyfiles src/posts/*.md build/server",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"swa": "swa start"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "^1.1.1",
		"@microsoft/applicationinsights-web": "^2.8.12",
		"@sveltejs/kit": "^1.15.9",
		"@types/glob": "^8.1.0",
		"@types/js-yaml": "^4.0.5",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"copyfiles": "^2.4.1",
		"dayjs": "^1.11.7",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"glob": "^8.1.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"rehype-external-links": "^2.0.1",
		"rehype-highlight": "^6.0.0",
		"rehype-stringify": "^9.0.3",
		"remark-frontmatter": "^4.0.1",
		"remark-gfm": "^3.0.1",
		"remark-parse": "^10.0.1",
		"remark-rehype": "^10.1.0",
		"remark-unwrap-images": "^3.0.1",
		"rimraf": "^3.0.2",
		"sass": "^1.62.1",
		"svelte": "^3.58.0",
		"svelte-adapter-azure-swa": "^0.15.0",
		"svelte-check": "^3.2.0",
		"svelte-preprocess": "^5.0.3",
		"to-vfile": "^7.2.4",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"unified": "^10.1.2",
		"vite": "^4.3.3"
	},
	"type": "module",
	"engines": {
		"node": "18.x"
	}
}
