{
	"name": "frontend",
	"version": "0.0.1",
	"scripts": {
		"dev": "node ./generate-last-modified-metadata.js && vite dev",
		"build": "rimraf api/src && node ./generate-last-modified-metadata.js && vite build && copyfiles src/posts/*.md build/server",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"swa": "swa start"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "^1.1.6",
		"@microsoft/applicationinsights-web": "^3.0.5",
		"@sveltejs/kit": "^1.27.6",
		"@types/glob": "^8.1.0",
		"@types/js-yaml": "^4.0.9",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"copyfiles": "^2.4.1",
		"dayjs": "^1.11.10",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.0",
		"glob": "^10.3.10",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-highlight": "^7.0.0",
		"rehype-stringify": "^10.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.0.0",
		"remark-unwrap-images": "^4.0.0",
		"rimraf": "^5.0.5",
		"sass": "^1.69.5",
		"svelte": "^4.2.5",
		"svelte-adapter-azure-swa": "^0.19.0",
		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^5.1.0",
		"to-vfile": "^8.0.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"unified": "^11.0.4",
		"vite": "^4.5.0"
	},
	"type": "module",
	"engines": {
		"node": "18.x"
	}
}
